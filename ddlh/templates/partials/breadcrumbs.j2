{% if breadcrumbs %}
    <nav class="breadcrumbs-container">
        <ul class="breadcrumbs">
            {% for breadcrumb in breadcrumbs %}
                <li>
                    {% if breadcrumb.url %}
                        <a href="{{ breadcrumb.url }}">{{ breadcrumb.title }}</a>
                    {% else %}
                        {{ breadcrumb.title }}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </nav>
{% endif %}
